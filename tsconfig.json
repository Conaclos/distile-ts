{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "noEmitHelpers": false,
    "removeComments": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "target": "es6",

    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny" : true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,

    "pretty": true
  }
}

