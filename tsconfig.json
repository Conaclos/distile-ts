{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "lib": ["dom", "es6"],
    "target": "ES6",
    "module": "commonjs",
    "noEmitHelpers": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,
    "noImplicitAny" : true,
    "noImplicitReturns": true,
    "strictNullChecks": true,

    "pretty": true
  }
}

